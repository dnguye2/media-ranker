  <section class="spotlight"> 
    <h2> 
        MEDIA SPOTLIGHT:
        <%= link_to @spotlight.title, work_path(@spotlight.id), :class => "#{@spotlight.category}" %>
        <small>by <%= @spotlight.creator %></small>
      </span>
    </h2>
    <small> # votes, <%= @spotlight.description %></small>
  </section>

  <hr>

  <section class="top-ten__container">
      <section class="top-ten__list-container">
          <h2 class="album top-ten__header">Top Albums</h2>
              <ul class="list-group list-group-flush">
                <% @top_albums.each do |album| %>
                  
                  <li class="list-group-item">
                    <h4><%= link_to album.title, work_path(album.id), :class => "album" %><small> by <%= album.creator %> </small></h4>
                    <p class="small"># votes</p>
                  </li>
                <% end %>
              </ul>
      </section>


      <section class="top-ten__list-container">
          <h2 class="book top-ten__header">Top Books</h2>
              <ul class="list-group list-group-flush">
                <% @top_books.each do |book| %>
                  
                  <li class="list-group-item">
                    <h4><%= link_to book.title, work_path(book.id), :class => "book" %><small> by <%= book.creator %> </small></h4>
                    <p class="small"># votes</p>
                  </li>
                <% end %>
              </ul>
      </section>

      <section class="top-ten__list-container">
          <h2 class="movie top-ten__header">Top Movies</h2>
              <ul class="list-group list-group-flush">
                <% @top_movies.each do |movie| %>
                  
                  <li class="list-group-item">
                    <h4><%= link_to movie.title, work_path(movie.id), :class => "movie" %><small> by <%= movie.creator %> </small></h4>
                    <p class="small"># votes</p>
                  </li>
                <% end %>
              </ul>
      </section>     
  </section>
