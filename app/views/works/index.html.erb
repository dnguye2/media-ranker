<% if @works.length > 0 %>
    <h1 class="text-center">List of works</h1>
      
      <section class="media-table">
          <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
            <h2 class="album">Albums</h2>
            <thead>
              <tr>
                <th scope="col", class="th-sm">Votes</th>
                <th scope="col", class="th-sm">Title</th>
                <th scope="col", class="th-sm">Created By</th>
                <th scope="col", class="th-sm">Publication Year</th>
                <th scope="col", class="th-sm">Upvote</th>
              </tr>
            </thead>
            <tbody>
              <% @albums.each do |album| %>
                <tr>
                  <td><%= album.votes.count %></td>
                  <td><%= link_to album.title, work_path(album.id), class: "album" %></td>
                  <td><%= album.creator %></td>
                  <td><%= album.publication_year %></td>
                  <td><%= button_to "Upvote", votes_path(work_id: album.id), method: :post, :class => "btn btn-outline-dark"%></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      </section>
       
      <section class="media-table">
          <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
            <h2 class="book">Books</h2>
            <thead>
              <tr>
                <th scope="col", class="th-sm">Votes</th>
                <th scope="col", class="th-sm">Title</th>
                <th scope="col", class="th-sm">Created By</th>
                <th scope="col", class="th-sm">Publication Year</th>
                <th scope="col", class="th-sm">Upvote</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= book.votes.count %></td>
                  <td><%= link_to book.title, work_path(book.id), class: "book" %></td>
                  <td><%= book.creator %></td>
                  <td><%= book.publication_year %></td>
                  <td><%= button_to "Upvote", votes_path(work_id: book.id), method: :post, :class => "btn btn-outline-dark" %></td>                  </tr>
            <% end %>
            </tbody>
          </table>
      </section>

      <section class="media-table">
          <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
            <h2 class="movie">Movies</h2>
            <thead>
              <tr>
                <th scope="col", class="th-sm">Votes</th>
                <th scope="col", class="th-sm">Title</th>
                <th scope="col", class="th-sm">Created By</th>
                <th scope="col", class="th-sm">Publication Year</th>
                <th scope="col", class="th-sm">Upvote</th>
              </tr>
            </thead>
            <tbody>
              <% @movies.each do |movie| %>
                <tr>
                  <td><%= movie.votes.count %></td>
                  <td><%= link_to movie.title, work_path(movie.id), class: "movie" %></td>
                  <td><%= movie.creator %></td>
                  <td><%= movie.publication_year %></td>
                  <td><%= button_to "Upvote", votes_path(work_id: movie.id), method: :post, :class => "btn btn-outline-dark" %></td>                </tr>
            <% end %>
            </tbody>
          </table>
      </section>
      
  <% else %>
    <h3>No works in the system!</h3>
  <% end %>
 
 <section>
  <%= button_to "View Top Media", root_path, method: :get, :class => "btn btn-outline-dark", form: {style: 'display:inline-block;'}%>
  <%= button_to "Add a New Work", new_work_path, method: :get, :class => "btn btn-outline-dark", form: {style: 'display:inline-block;' }%>
</section>
