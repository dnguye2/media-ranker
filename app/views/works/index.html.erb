<% if @works.length > 0 %>
    <h1 class="text-center">List of works</h1>
      
      <section class="media-table">
          <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
          <h2>Albums</h2>
          <thead>
            <tr>
              <th scope="col", class="th-sm">Votes</th>
              <th scope="col", class="th-sm">Title</th>
              <th scope="col", class="th-sm">Created By</th>
              <th scope="col", class="th-sm">Publication Year</th>
              <th scope="col", class="th-sm">Upvote</th>
            </tr>
          </thead>
          <tbody>
            <% @albums.each do |album| %>
              <tr>
                <td><%= "DNE" %></td>
                <td><%= album.title %></td>
                <td><%= album.creator %></td>
                <td><%= album.publication_year %></td>
                <td><%= "DNE" %></td>
              </tr>
          <% end %>
          </tbody>
      </section>
       
      <section class="media-table">
          <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
          <h2>Books</h2>
          <thead>
            <tr>
              <th scope="col", class="th-sm">Votes</th>
              <th scope="col", class="th-sm">Title</th>
              <th scope="col", class="th-sm">Created By</th>
              <th scope="col", class="th-sm">Publication Year</th>
              <th scope="col", class="th-sm">Upvote</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= "DNE" %></td>
                <td><%= book.title %></td>
                <td><%= book.creator %></td>
                <td><%= book.publication_year %></td>
                <td><%= "DNE" %></td>
              </tr>
          <% end %>
          </tbody>
      </section>

      <section class="media-table">
          <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
          <h2>Movies</h2>
          <thead>
            <tr>
              <th scope="col", class="th-sm">Votes</th>
              <th scope="col", class="th-sm">Title</th>
              <th scope="col", class="th-sm">Created By</th>
              <th scope="col", class="th-sm">Publication Year</th>
              <th scope="col", class="th-sm">Upvote</th>
            </tr>
          </thead>
          <tbody>
            <% @movies.each do |movie| %>
              <tr>
                <td><%= "DNE" %></td>
                <td><%= movie.title %></td>
                <td><%= movie.creator %></td>
                <td><%= movie.publication_year %></td>
                <td><%= "DNE" %></td>
              </tr>
          <% end %>
          </tbody>
      </section>
      
  <% else %>
    <h3>No works in the system!</h3>
  <% end %>
  </table>
