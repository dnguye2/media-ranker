<div class="d-flex flex-column">
  <div id="page-content">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10">
          <% if @work.errors.any? %>
            <ul class="errors alert alert-danger" role="alert">
              <% @work.errors.each do |column, message| %>
                <li>
                  <strong><%= column.capitalize %></strong> <%= message %>
                </li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @work, class: 'create-work' do |f| %>

            <div class = "form-group">
            <%= f.label :category%>
            <%= f.select :category, ["album", "book", "movie"], {}, {class: "form-control"} %>
            </div>

            <div class = "form-group">
            <%= f.label :title, class: "hidden" %>
            <%= f.text_field :title, placeholder: "Title", class: 'form-control' %>
            </div>

            <div class = "form-group">
            <%= f.label :creator, class: "hidden" %>
            <%= f.text_field :creator, placeholder: "Creator", class: 'form-control' %>
            </div>

            <div class = "form-group">
            <%= f.label :publication_year, class: "hidden" %>
            <%= f.text_field :publication_year, placeholder: "Year Published", class: 'form-control' %>
            </div>

            <div class = "form-group">
            <%= f.label :description, class: "hidden" %>
            <%= f.text_area :description, placeholder: "Description", class: 'form-control' %>
            </div>



            <%= f.submit action_name, class: "btn btn-custom-outline" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>