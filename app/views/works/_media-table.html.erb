<section class="media-table">
    <table class="table table-striped table-sm table-custom" cellspacing="0" width="100%">
      <h2 class="<%= collection.first.category %>"><%= "#{collection.first.category}s" %></h2>

        <thead>
          <tr>
            <th scope="col", width = "80", class="th-sm">Votes</th>
            <th scope="col", class="th-sm">Title</th>
            <th scope="col", class="th-sm">Created By</th>
            <th scope="col", width = "100", class="th-sm">Published</th>
            <th scope="col", width = "100", class="th-sm">Upvote</th>
          </tr>
        </thead>

        <tbody>
          <% collection.each do |work| %>
            <tr>
              <td class="pl-3"><%= work.votes_count %></td>
              <td><%= link_to work.title, work_path(work.id), class: work.category %></td>
              <td><%= work.creator %></td>
              <td><%= work.publication_year %></td>
              <td><%= button_to "Upvote", votes_path(work_id: work.id), method: :post, :class => "btn btn-outline-dark"%></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</section>


