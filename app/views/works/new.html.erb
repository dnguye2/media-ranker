<h1 class="text-center form-header-gradient"> Add a new work </h1>
<div class="d-flex flex-column">
      <div id="page-content">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-10">
                <% if @work.errors.any? %>
                  <ul class="errors">
                    <% @work.errors.each do |column, message| %>
                      <li>
                        <strong><%= column.capitalize %></strong> <%= message %>
                      </li>
                    <% end %>
                  </ul>
                <% end %>

                <%= form_with model: @work, class: 'create-work' do |f| %>
                  <p class="text-center">Please provide the following information to create a work:</p>

                  <div class = "form-group">
                  <%= f.label :category%>
                  <%= f.select :category, ["album", "book", "movie"], {}, {class: "form-control"} %>
                  </div>

                  <div class = "form-group">
                  <%= f.label :title, class: "hidden" %>
                  <%= f.text_field :title, placeholder: "Title", class: 'form-control' %>
                  </div>

                  <div class = "form-group">
                  <%= f.label :creator, class: "hidden" %>
                  <%= f.text_field :creator, placeholder: "Creator", class: 'form-control' %>
                  </div>

                  <div class = "form-group">
                  <%= f.label :publication_year, class: "hidden" %>
                  <%= f.text_field :publication_year, placeholder: "Year Published", class: 'form-control' %>
                  </div>

                  <div class = "form-group">
                  <%= f.label :description, class: "hidden" %>
                  <%= f.text_area :description, placeholder: "Description", class: 'form-control' %>
                  </div>



                  <%= f.submit "Create work", class: "btn btn-primary" %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>